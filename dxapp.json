{
  "summary": "stjude_star",
  "title": "STAR RNA Alignment (St. Jude)",
  "name": "stjude_star",
  "version": "STAR_SHORT_VERSION",
  "runSpec": {
    "distribution": "Ubuntu",
    "interpreter": "python3",
    "release": "20.04",
    "version": "0",
    "file": "src/code.py",
    "timeoutPolicy": {
      "*": {
        "minutes": 30,
        "hours": 24
      }
    },
    "execDepends": [
      {
        "name": "pigz"
      }
    ]
  },
  "billTo": "org-stjude_cloud",
  "authorizedUsers": [
    "user-clmcleod",
    "user-snewman",
    "user-appdpdnanexus_stjude.org",
    "user-appdddnanexus_stjude.org",
    "org-stjude_cloud_app_runners",
    "org-stjude_cloud"
  ],
  "outputSpec": [
    {
      "patterns": [
        "*.bam"
      ],
      "class": "file",
      "help": "",
      "label": "STAR-produced, mapped, and sorted BAM file",
      "name": "star_bam"
    },
    {
      "patterns": [
        "*.bam.bai"
      ],
      "class": "file",
      "help": "",
      "label": "STAR-produced, mapped, and sorted index file",
      "name": "star_index"
    }
  ],
  "inputSpec": [
    {
      "patterns": [
        "*.fastq.gz"
      ],
      "class": "file",
      "help": "Forward read Fastq file for corresponding transcriptome",
      "label": "Fastq/R1",
      "name": "fastq_r1"
    },
    {
      "patterns": [
        "*.fastq.gz"
      ],
      "class": "file",
      "help": "Reverse read Fastq file for corresponding transcriptome",
      "label": "Fastq/R2",
      "name": "fastq_r2"
    },
    {
      "class": "string",
      "label": "Genome",
      "name": "ref_name",
      "optional": false,
      "choices": ["GRCh37-lite", "GRCh38_no_alt"],
      "default": "GRCh37-lite",
      "help": "" 
    }
  ],
  "regionalOptions": {
    "azure:westus": {
      "systemRequirments": {
        "*": {
          "instanceType": "azure:mem3_ssd1_x16"
        }
      }
    },
    "aws:us-east-1": {
      "systemRequirments": {
        "*": {
          "instanceType": "mem3_ssd1_x16"
        }
      }
    }
  },
  "dxapi": "1.0.0",
  "details": {
    "contactEmail": "clay.mcleod@stjude.org"
  },
  "openSource": false,
  "developers": [
    "user-clmcleod",
    "user-athrashe"
  ],
  "access": {
    "allProjects": "VIEW"
  }
}
